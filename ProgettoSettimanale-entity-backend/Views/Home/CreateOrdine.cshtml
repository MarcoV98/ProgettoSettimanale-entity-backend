﻿@model ProgettoSettimanale_entity_backend.Models.Ordini

@{
    ViewBag.Title = "CreateOrdine";
}

<h2 class="text-center text-primary mx-auto">Concludi ordine</h2>
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal mx-auto p-2 border border-2 align-items-center rounded-3">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <div class="form-group">
            @Html.LabelFor(model => model.DataConsegna, htmlAttributes: new { @class = "" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.DataConsegna, new { htmlAttributes = new { @class = "me-2 rounded-3", type = "date" } })
                @Html.ValidationMessageFor(model => model.DataConsegna, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Allergie, htmlAttributes: new { @class = "" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Allergie, new { htmlAttributes = new { @class = "me-2 rounded-3" } })
                @Html.ValidationMessageFor(model => model.Allergie, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.NoteAggiunta, htmlAttributes: new { @class = "" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.NoteAggiunta, new { htmlAttributes = new { @class = "me-2 rounded-3" } })
                @Html.ValidationMessageFor(model => model.NoteAggiunta, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-info" />
            </div>
        </div>
    </div>
}